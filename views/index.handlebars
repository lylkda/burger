<title>Eat a Burger!</title>

<div class="outer">
    <table>
        <tr>
            <td>
                <h2>Eat a Burger!</h2>
                <dt>
                    {{#each burgers}} {{#unless devoured}}
                    <p>
                        {{burger_name}}
                        <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
                            DEVOUR!
                        </button>
                    </p>
                    {{/unless}} {{/each}}
                </dt>
            </td>
            <td class="offset">
                <h2>Devoured Burgers</h2>
                <dt>
                    {{#each burgers}} {{#if devoured}}
                    <p>
                        {{burger_name}}
                    </p>
                    {{/if}} {{/each}}
                </dt>
            </td>
        </tr>
    <img src="https://i.giphy.com/media/3BaaBb6y8J9Fm/200w_s.gif"></img>
    </table>


<form class="create-form">

    <div class="form-group">
        {{!-- <label for="ca">Cat Name:</label> --}}
        <input type="text" id="burger" name="name">
    </div>

